{% extends 'base.html.twig' %}

{% block metatitle %}Présentations | Strengthmate{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <h1 class="text-center mb-5">Qui sommes-nous ?</h1>
        <div class="presentation-container">
            <img id="wall-presentation" src="{{ asset('assets/image/couple.jpg') }}" alt="Présentation">
            <div class="presentation-content">
                {% if presentations is empty %}
                    <p class="text-center">Aucune présentation disponible pour le moment.</p>
                {% else %}
                    {% for presentation in presentations %}
                        <div class="presentation-card mb-5">
                            <h2 class="presentation-title">{{ presentation.title }}</h2>
                            <p class="presentation-text">{{ presentation.content }}</p>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/presentation.css') }}">
{% endblock %}
