{% extends "base.html.twig" %}

{% block metatitle %}Ajouter un {{ entity_type }} | Strengthmate{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4 text-center">Ajouter un {{ entity_type }}</h1>

        <div class="card card-large bg-dark text-white">
            <div class="card-body">
                <h2 class="text-center mb-4">Nouveau {{ entity_type }}</h2>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.title, "Titre", {'label_attr': {'class': "form-label"}}) }}
                    {{ form_widget(form.title, {'attr': {'class': "form-control"}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.content, "Contenu", {'label_attr': {'class': "form-label"}}) }}
                    {{ form_widget(form.content, {'attr': {'class': "form-control", "rows": 6}}) }}
                    {{ form_errors(form.content) }}
                </div>

                {% if entity_type == "temoignages" %}
                    <div class="mb-3 rating-container">
                        <label class="form-label">Note</label>
                        <div class="rating">
                            {% for i in 5..1 %}
                                <input type="radio" id="star{{ i }}" name="temoignages[rating]" value="{{ i }}">
                                <label for="star{{ i }}">{{ i }} â˜…</label>
                            {% endfor %}
                        </div>
                    </div>
                    {% do form.rating.setRendered() %}
                {% endif %}



                {% if entity_type in ["presentation", "suivis"] %}
                    <div class="mb-3">
                        <label class="form-label">Image</label>
                        <div class="custom-file-upload">
                            <label for="{{ entity_type }}_image" class="custom-file-label">
                                <span>ðŸ“· Cliquez pour ajouter une image</span>
                            </label>
                            {{ form_widget(form.image, {'attr': {'class': 'd-none', 'id': entity_type ~ '_image'}}) }}
                        </div>
                        {{ form_errors(form.image) }}
                    </div>
                {% endif %}

                <button type="submit" class="btn btn-warning w-100 mt-3">Enregistrer</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/rating.js') }}"></script>
{% endblock %}
